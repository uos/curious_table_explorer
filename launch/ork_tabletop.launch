<?xml version="1.0"?>
<launch>
  <arg name="config" default="$(find curious_table_explorer)/config/tabletop_find_clusters.ork" />
  <arg name="debug" default="false" />

  <node name="tabletop_object_recognition_server" pkg="object_recognition_ros" type="server" args="--node_name tabletop_object_recognition -c $(arg config)" output="screen" if="$(arg debug)"/>
  <node name="tabletop_object_recognition_server" pkg="object_recognition_ros" type="server" args="--node_name tabletop_object_recognition -c $(arg config)" unless="$(arg debug)"/>
  <param name="tabletop_object_recognition/robot_frame"      value="/base_footprint" />
  <param name="tabletop_object_recognition/sensor_frame"     value="/kinect_rgb_optical_frame" />
  <param name="tabletop_object_recognition/filter_planes"    value="true" />
  <param name="tabletop_object_recognition/min_table_height" value="0.2" />
  <param name="tabletop_object_recognition/max_table_height" value="1.5" />
  <param name="tabletop_object_recognition/max_angle_diff"   value=".3" />
  <param name="tabletop_object_recognition/table_normal_x"   value="0" />
  <param name="tabletop_object_recognition/table_normal_y"   value="0" />
  <param name="tabletop_object_recognition/table_normal_z"   value="1" />
</launch>
